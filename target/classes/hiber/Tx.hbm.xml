<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="aop_data.dao.Tx" table="tx" schema="db1">
        <id name="id">
            <column name="id" sql-type="int(10)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
        <property name="money">
            <column name="money" sql-type="double(22)" precision="22" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>